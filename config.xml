<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kidsloop.platform.student" version="1.10.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>KidsLoop</name>
    <description>
        An interactive live platform for teachers and students.
    </description>
    <author email="info@calmid.com" href="https://www.kidsloop.net">
        Calm Island KidsLoop 
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="AppendUserAgent" value="Cordova" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="AppendUserAgent" value="cordovaios" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="AllowNewWindows" value="false" />
        <preference name="AllowsAirPlayForMediaPlayback" value="false" />
        <preference name="MediaPlaybackAllowsAirPlay" value="false" />
        <preference name="AllowBackForwardNavigationGestures" value="false" />
        <preference name="Allow3DTouchLinkPreview" value="false" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="EnableViewportScale" value="true" />
        <preference name="MediaTypesRequiringUserActionForPlayback" value="none"/>
        <preference name="AllowInlineMediaPlayback" value="true"/>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>KidsLoop Live wants to have camera permission for classroom video conference.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSMicrophoneUsageDescription">
            <string>KidsLoop Live wants to have microphone permission for classroom video conference.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
            <string>KidsLoop Live wants to access photo library to select pictures for homework.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryAddUsageDescription">
            <string>KidsLoop Live wants to access photo library to save pictures for homework.</string>
        </edit-config>
    </platform>
    <platform name="android">
        <preference name="AppendUserAgent" value="Cordova" />
        <preference name="Fullscreen" value="true" />
        <preference name="android-minSdkVersion" value="22" />
        <config-file target="AndroidManifest.xml" parent="/*" mode="merge">
            <uses-permission android:name="android.permission.CAMERA" />
            <uses-permission android:name="android.permission.RECORD_AUDIO" />
            <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
            <uses-permission android:name="android.hardware.camera" />
            <uses-permission android:name="android.hardware.camera.autofocus" />
        </config-file>
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:allowBackup="false"/>
            <application android:usesCleartextTraffic="true" />
        </edit-config>
    </platform>
    <platform name="android">
        <icon density="ldpi" background="res/android/drawable-ldpi/ic_app_adaptive_bg.png" foreground="res/android/drawable-ldpi/ic_app_adaptive_fg.png" src="res/android/drawable-ldpi/ic_app_legacy.png"/>
        <icon density="mdpi" background="res/android/drawable-mdpi/ic_app_adaptive_bg.png" foreground="res/android/drawable-mdpi/ic_app_adaptive_fg.png" src="res/android/drawable-mdpi/ic_app_legacy.png"/>
        <icon density="hdpi" background="res/android/drawable-hdpi/ic_app_adaptive_bg.png" foreground="res/android/drawable-hdpi/ic_app_adaptive_fg.png" src="res/android/drawable-hdpi/ic_app_legacy.png" />
        <icon density="xhdpi" background="res/android/drawable-xhdpi/ic_app_adaptive_bg.png" foreground="res/android/drawable-xhdpi/ic_app_adaptive_fg.png" src="res/android/drawable-xhdpi/ic_app_legacy.png" />
        <icon density="xxhdpi" background="res/android/drawable-xxhdpi/ic_app_adaptive_bg.png" foreground="res/android/drawable-xxhdpi/ic_app_adaptive_fg.png" src="res/android/drawable-xxhdpi/ic_app_legacy.png" />
        <icon density="xxxhdpi" background="res/android/drawable-xxxhdpi/ic_app_adaptive_bg.png" foreground="res/android/drawable-xxxhdpi/ic_app_adaptive_fg.png" src="res/android/drawable-xxxhdpi/ic_app_legacy.png" />
    </platform>
